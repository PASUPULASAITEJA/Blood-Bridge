# BloodBridge - Environment Variables for AWS Deployment
# =========================================================
# Copy this file to .env and fill in your AWS credentials and settings

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=production
SECRET_KEY=bloodbridge-production-secret-key-2024-change-this
DEBUG=False

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# Set to 'true' for AWS deployment, 'false' for local development
USE_AWS=true

# AWS CREDENTIALS (if not using IAM roles)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ============================================
# DYNAMODB CONFIGURATION
# ============================================
DYNAMODB_USERS_TABLE=bloodbridge_users
DYNAMODB_REQUESTS_TABLE=bloodbridge_requests
DYNAMODB_INVENTORY_TABLE=bloodbridge_inventory
DYNAMODB_EMERGENCIES_TABLE=bloodbridge_emergencies

# ============================================
# SNS CONFIGURATION (SMS Notifications)
# ============================================
SNS_ENABLED=true
SNS_REGION=us-east-1

# Update these ARNs after running aws/sns_setup.py
SNS_ALERTS_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT:bloodbridge-alerts
SNS_EMERGENCY_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT:bloodbridge-emergency

# ============================================
# CLOUDWATCH LOGGING
# ============================================
CLOUDWATCH_ENABLED=true
CLOUDWATCH_LOG_GROUP=/aws/bloodbridge/app

# ============================================
# APPLICATION SETTINGS
# ============================================
PORT=80
WORKERS=4
HOST=0.0.0.0
