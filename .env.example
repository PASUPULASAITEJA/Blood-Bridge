# BloodBridge - Environment Variables for AWS Deployment
# =========================================================
# Copy this file to .env and fill in your AWS credentials and settings

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# Set to 'true' for AWS deployment, 'false' for local development
USE_AWS=false


# AWS CREDENTIALS (if not using IAM roles)

# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ============================================
# DYNAMODB CONFIGURATION
# ============================================
DYNAMODB_USERS_TABLE=bloodbridge_users
DYNAMODB_REQUESTS_TABLE=bloodbridge_requests
DYNAMODB_INVENTORY_TABLE=bloodbridge_inventory
DYNAMODB_EMERGENCIES_TABLE=bloodbridge_emergencies

# ============================================
# SNS CONFIGURATION (SMS Notifications)
# ============================================
SNS_ENABLED=true
SNS_REGION=us-east-1

# Update these ARNs after running aws/sns_setup.py
SNS_ALERTS_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:bloodbridge-alerts
SNS_EMERGENCY_TOPIC=arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:bloodbridge-emergency

# ============================================
# CLOUDWATCH LOGGING
# ============================================
CLOUDWATCH_ENABLED=true
CLOUDWATCH_LOG_GROUP=/aws/bloodbridge/app

# ============================================
# APPLICATION SETTINGS
# ============================================
PORT=80
WORKERS=4
HOST=0.0.0.0

# ============================================
# GUNICORN SETTINGS (for EC2 deployment)
# ============================================
# GUNICORN_CMD_ARGS=--workers=4 --worker-class=sync --bind=0.0.0.0:80

# ============================================
# NOTES
# ============================================
# 1. Generate a strong SECRET_KEY:
#    python -c "import secrets; print(secrets.token_hex(32))"
#
# 2. Update SNS Topic ARNs after running:
#    python aws/sns_setup.py
#
# 3. Update DynamoDB table names if you created them with different names
#
# 4. For EC2 deployment, use IAM roles instead of AWS credentials
#
# 5. Keep this file secure and never commit to version control
